import sys

def main():
    total = 0.0
    count = 0
    for line in sys.stdin:
        line = line.strip()
        if line == "":
            continue
        try:
            total += float(line)
            count += 1
        except ValueError:
            sys.stderr.write("non-numeric input\n")
            return 1
    if count == 0:
        sys.stderr.write("no input\n")
        return 1
    print(total / count)
    return 0

if __name__ == "__main__":
    sys.exit(main())
